<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/user_info_cmnt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commenter_image_civ"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:src="@drawable/git_logo"
            />
        <TextView
            android:id="@+id/commenter_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_toEndOf="@id/commenter_image_civ"
            android:layout_marginStart="10dp"
            android:textSize="17dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            />
        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hh:tt, dd:mm:yyyy"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/commenter_name_tv"
            android:gravity="bottom"
            android:textColor="@android:color/darker_gray"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/commment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, this is comments here"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        />

</LinearLayout>
</androidx.cardview.widget.CardView>